<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/security
						http://www.springframework.org/schema/security/spring-security.xsd">

	<http auto-config="false" authentication-manager-ref="static" use-expressions="true" disable-url-rewriting="true">
		<intercept-url pattern="/login/login.htm" access="permitAll" />
		<intercept-url pattern="/**/*.htm" access="isAuthenticated()" />
		<form-login
			login-page="/login/login.htm"
			default-target-url="/user/workbench.htm"
			username-parameter="username"
			password-parameter="password"
			authentication-failure-url="/login/login.htm?msg=invalid_credentials"
		/>
		<logout logout-success-url="/login/login.htm" logout-url="/j_spring_security_logout" invalidate-session="true" delete-cookies="JSESSIONID" />
		<session-management session-fixation-protection="migrateSession" invalid-session-url="/login/login.htm" 
			session-authentication-error-url="/login/login.htm?msg=sessionAuthError">
			<concurrency-control max-sessions="1" 
				error-if-maximum-exceeded="true" 
				expired-url="/login/login.htm?msg=sessionExpired" 
				session-registry-alias="sessionRegistry"/>
		</session-management>
		<csrf/>
	</http>

	<beans:bean id="sessionRegistry" class="org.springframework.security.core.session.SessionRegistryImpl" />

	<authentication-manager id="static">
		<authentication-provider>
			<user-service>
				<user name="aaa" password="aaa" authorities="ROLE_USER"/>
			</user-service>
		</authentication-provider>
	</authentication-manager>
</beans:beans>